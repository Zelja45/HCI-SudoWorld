<UserControl x:Class="SudoWorld.View.Controls.BottomMenuItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SudoWorld.View.Controls"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Button Height="30"
            Width="30"
            Style="{DynamicResource MaterialDesignIconButton}"
            Command="{Binding Command, RelativeSource={RelativeSource AncestorType=UserControl}}"
            Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=UserControl}}">
        <materialDesign:PackIcon Kind="{Binding Icon, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                 Width="20"
                                 Height="20" />
    </Button>
    
</UserControl>
